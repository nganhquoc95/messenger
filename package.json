{
  "name": "messenger",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Jonathan Nguyen",
  "license": "ISC",
  "description": "Messenger desktop application built with Electron.",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "canvas": "^3.2.0"
  },
  "build": {
    "appId": "com.messenger.app",
    "productName": "Messenger",
    "directories": {
      "output": "dist"
    },
    "electronLanguages": [
      "en-US",
      "vi"
    ],
    "files": [
      "main.js",
      "src/**",
      "assets/**"
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    }
  }
}
